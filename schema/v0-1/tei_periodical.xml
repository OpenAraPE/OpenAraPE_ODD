        <revisionDesc>
            <change when="2017-01-15" who="#pers_TG">Added @type="inline" to tei:note. Added @type attributes to tei:date.</change>
            <change when="2016-06-17" who="#pers_TG">Initial creation of this file.</change>
        </revisionDesc>
